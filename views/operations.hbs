<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Operations History</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Operations History</h1>
        <div class="section">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Timestamp</th>
                        <th>Device</th>
                        <th>Control</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each operations}}
                    <tr>
                        <td>{{this.operationID}}</td>
                        <td>{{this.timeStamp}}</td>
                        <td>{{this.deviceName}}</td>
                        <td>{{this.controlName}}</td>
                        <td>
                            <a href='update_operation?operationID={{this.operationID}}'>Update</a> |
                            <a href='delete_operation?operationID={{this.operationID}}'>Delete</a> |
                            <a href='read_operation?operationID={{this.operationID}}'>Details</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <a href="create_operation" class="button">Create New Operation</a>
        </div>
        <a href="/" class="button">Go Back To Homepage</a>
    </div>
</body>
</html>