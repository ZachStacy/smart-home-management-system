<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Users</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <!-- Navigation Pane -->
        <nav class="menu">
            <a href="/" class="button">Home</a>
            <a href="/users" class="button">Users</a>
            <a href="/devices" class="button">Devices</a>
            <a href="/controls" class="button">Controls</a>
            <a href="/devicetypes" class="button">Device Types</a>
            <a href="/operations" class="button">Operations History</a>
        </nav>

        <!-- Space between navigation and table -->
        <div class="section" style="margin-top: 50px;">
            <h1>Users</h1>

            <div class="section">
                <table id="users-table">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr data-value="{{this.userID}}">
                            <td>{{this.userID}}</td>
                            <td>{{this.username}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phone}}</td>
                            <td>
                                <a href='/edit_user?userID={{this.userID}}' class="button">Update</a> |
                                <button class="delete-button" onclick="deleteUser({{this.userID}})">Delete</button> |
                                <a href='/read_user?userID={{this.userID}}' class="button">Details</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <a href="/create_user" class="button">Create New User</a>
            </div>
            <a href="/" class="button">Go Back To Homepage</a>
        </div>
    </div>
    <script src="/js/delete_user.js"></script>
</body>
</html>
