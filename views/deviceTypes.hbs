<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Device Types</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <!-- Navigation Pane -->
        <nav class="menu">
            <a href="/" class="button">Home</a>
            <a href="/users" class="button">Users</a>
            <a href="/devices" class="button">Devices</a>
            <a href="/controls" class="button">Controls</a>
            <a href="/devicetypes" class="button">Device Types</a>
            <a href="/operations" class="button">Operations History</a>
        </nav>

        <!-- Space between navigation and table -->
        <div class="section" style="margin-top: 50px;">
            <h1 class="page-title">Device Types</h1>
            <div class="table-container">
                <table id="types-table">
                    <thead>
                        <tr>
                            <th>Type ID</th>
                            <th>Type Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each deviceTypes}}
                        <tr data-value="{{this.typeID}}">
                            <td>{{this.typeID}}</td>
                            <td>{{this.typeName}}</td>
                            <td>
                                <a href='edit_type?typeID={{this.typeID}}' class="button">Update</a> |
                                <button class="delete-button" onclick="deleteType({{this.typeID}})">Delete</button> |
                                <a href='read_type?typeID={{this.typeID}}' class="button">Details</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <a href="create_type" class="button">Create New Device Type</a>
            </div>
        </div>
    </div>
    <script src="/js/delete_type.js"></script>
</body>
</html>