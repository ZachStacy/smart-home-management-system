<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Devices</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Devices</h1>
        <div class="section">
            <table>
                <thead>
                    <tr>
                        <th>Device ID</th>
                        <th>Device Name</th>
                        <th>Status</th>
                        <th>Type ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each devices}}
                    <tr>
                        <td>{{this.deviceID}}</td>
                        <td>{{this.deviceName}}</td>
                        <td>{{this.status}}</td>
                        <td>{{this.typeID}}</td>
                        <td>
                            <a href='update_device.html?deviceID={{this.deviceID}}'>Update</a> |
                            <a href='delete_device.html?deviceID={{this.deviceID}}'>Delete</a> |
                            <a href='read_device.html?deviceID={{this.deviceID}}'>Details</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <a href="create_device.html" class="button">Create New Device</a>
        </div>
    </div>
</body>
</html>